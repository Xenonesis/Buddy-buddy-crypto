# Budget Buddy Environment Configuration

# Infura Project ID for Ethereum RPC access
VITE_INFURA_PROJECT_ID=your_infura_project_id_here

# WalletConnect Project ID for wallet connection
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# NitroLite Protocol Configuration
VITE_NITROLITE_RELAYER_URL=https://api.nitrolite.io
VITE_NITROLITE_RELAYER_ADDRESS=0x0000000000000000000000000000000000000000
VITE_NITROLITE_FORWARDER_ADDRESS=0x0000000000000000000000000000000000000000

# Application Settings
VITE_APP_NAME=Budget Buddy
VITE_APP_VERSION=1.0.0

# Network Configuration
VITE_SUPPORTED_CHAIN_IDS=1,11155111

# Feature Flags
VITE_ENABLE_GASLESS_TRANSACTIONS=true
VITE_ENABLE_RECURRING_PAYMENTS=true
VITE_ENABLE_TRANSACTION_MONITORING=true